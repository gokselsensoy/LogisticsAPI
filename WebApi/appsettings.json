{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:/Logs/MultilloAPI/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] [{MachineName}] [{ThreadId}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 30,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 104857600
        }
      }
      // {
      //   "Name": "Seq",
      //   "Args": { "serverUrl": "http://your-seq-server:5341" }
      // }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:4300",
      "http://localhost:7200"
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Database=MultilloDatabase;Username=Mehmet;Password=123;Server=localhost;Port=5432",
    "HangfireConnection": "Database=MultilloDatabaseHangfire;Username=Mehmet;Password=123;Server=localhost;Port=5432"
    //"PostgreSqlConnection": "Host=PROD_PG_HOST;Port=5432;Database=ProjectBaseDbProd;Username=YourUser;Password=YourSecurePassword" // Örnek PostgreSQL
  },
  "DatabaseProvider": "SqlServer", // <-- Veritabanı sağlayıcısını yönetmek için eklendi (Bkz. Öneri 3)
