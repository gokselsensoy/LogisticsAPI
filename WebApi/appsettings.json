{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning", // DB sorguları diski şişirmesin diye Warning, hata anında zaten loglar.
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:/Logs/TestMultilloApi/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] [{MachineName}] [{ThreadId}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 15,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 104857600
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://test.multillo.com",
      "http://localhost:4200"
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Database=MultilloDatabaseTest;Username=postgres;Password=123;Server=localhost;Port=5434",
    "HangfireConnection": "Database=MultilloHangfireTest;Username=postgres;Password=123;Server=localhost;Port=5434"
  },
  "Auth": {
    "Authority": "https://testauth.multillo.com",
    "ApiName": "IdentityApi"
  },
  "IdentityApi": {
    // Bu şifre, IdentityAPI'deki ClientRegistration'daki ile AYNI olmalı
    "ClientSecret": "Logistics_Client_Secret"
  },
  "ExternalServices": {
    "ProductApiBaseUrl": "https://api.external-products.com/"
  },
  "SubOrbitSettings": {
    "BaseUrl": "http://localhost:7200",
    "ApiKey": "pk_f2YC12zG9iX5yg0Zz1nWw8aj",
    "WebhookSecret": "BURAYA_WEBHOOK_IMZA_ANAHTARI_GELECEK"
  }
}